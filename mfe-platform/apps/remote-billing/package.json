{
  "name": "@mfe/remote-billing",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite build --watch\" \"wait-on dist/assets/remoteEntry.js && vite preview --port 5175 --strictPort\"",
    "serve": "vite preview --port 5175 --strictPort",
    "build": "tsc -b && vite build",
    "start": "vite preview --host 0.0.0.0 --port ${PORT:-5175}",
    "preview": "vite preview --port 5175"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mfe/platform-contracts": "1.0.0",
    "@mfe/ui-kit": "1.0.0",
    "@mui/material": "^7.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.3.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.2.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^9.0.4"
  }
}
